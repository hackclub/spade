{
  "version": 6,
  "configurePresets": [
    {
      "name": "pc",
      "displayName": "PC Build",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/pc_build/"
    },
    {
      "name": "rpi",
      "displayName": "Pico Build",
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/rpi_build",
      "cacheVariables": {
        "SPADE_TARGET": "rpi"
      },
      "environment": {
        "PICO_SDK_PATH": "~/raspberrypi/pico-sdk",
        "PICO_EXTRAS_PATH": "~/raspberrypi/pico-extras"
      }
    }
  ]
}